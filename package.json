{
  "name": "mail-header-analyzer",
  "version": "0.1.0",
  "private": true,
  "description": "Windows desktop app to analyze email headers locally (Electron + React + TS)",
  "main": "dist-electron/index.cjs",
  "type": "module",
  "author": "mail-header-analyzer",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:dev:main\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "dev:main": "tsup src/main/index.ts src/main/preload.ts --format cjs --out-dir dist-electron --external electron --sourcemap --watch",
    "build:renderer": "vite build",
    "build:electron": "tsup src/main/index.ts src/main/preload.ts --format cjs --out-dir dist-electron --define.process.env.NODE_ENV=\\\"production\\\" --external electron --sourcemap",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.example.mail-header-analyzer",
    "productName": "mail-header-analyzer",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "mail-header-analyzer",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fontsource/noto-sans-jp": "^5.1.0",
    "@radix-ui/react-tabs": "^1.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.452.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.9",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^7.2.0"
  }
}
